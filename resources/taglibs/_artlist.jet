{{block artlist(typeid=0,offset=0,limit=0, orderby="listorder", modelid = "")  }}
    {{if typeid == 0 }} {* 如果没有设置typeid *}
        {{ if isset(__typeid) }}{{typeid = __typeid }}{{end}} {*读取是否存在全局__typeid, (一般适用与分类页面)*}
        {{if typeid == 0 && isset(__refID) && __refID > -1}}{{typeid = __refID}}{{end}}{*判断是否在嵌套标签内*}
    {{end}}
    {{if typeid == -1 }}{{typeid = 0}}{{end}} {*公共位置需要指定typeid*}
    {{if !isset(page)}}{{page = 1}}{{end}} {*默认设置页码*}
    {{ range field = artlist(typeid, offset, limit, orderby, modelid, page) }}{{yield content}}{{end}}
{{end}}
